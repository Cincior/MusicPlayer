<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="headerStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">35sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name="recyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>
    <style name="searchViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/search_view</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:queryHint">song name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="theme">@style/searchViewTheme</item>
    </style>
    <style name="bottomLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="searchViewTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorControlActivated">@color/moreDarkBlue</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

</resources>